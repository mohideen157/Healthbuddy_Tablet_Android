<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorAccent</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="Theme_Dialog" parent="android:Theme.Holo.Dialog">
        <item name="android:windowMinWidthMajor">80%</item>
        <item name="android:windowMinWidthMinor">80%</item>
    </style>

    <style name="Toolbar.TitleText" parent="TextAppearance.Widget.AppCompat.Toolbar.Title">
        <item name="android:textSize">14sp</item>
        <item name="android:fontFamily">@font/ssproregular</item>
    </style>

    <style name="FilePickerTheme" parent="LibAppTheme">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="Toolbar.TitleTextNew" parent="TextAppearance.Widget.AppCompat.Toolbar.Title">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:fontFamily">@font/robotoregular</item>
    </style>

    <style name="NavigationDrawerStyle">
        <item name="android:textSize">13sp</item>
        <item name="android:fontFamily">@font/robotoregular</item>
    </style>

    <style name="DialogAnimation">
    <item name="android:windowEnterAnimation">@anim/fab_scale_up</item>
    <item name="android:windowExitAnimation">@anim/fab_scale_down</item>
    </style>
    <style name="tab_text" parent="@android:style/TextAppearance.Widget.TabWidget">
        <item name="android:fontFamily">@font/ssproregular</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="LE_THEME" parent=""></style>
    <!-- Application theme. -->


    <style  name="EditTextStyle">
        <item name="android:layout_width">72dp</item>
        <item name="android:layout_height">72dp</item>
        <item name="android:layout_margin">5dp</item>
        <item name="android:animateOnClick">true</item>
        <item name="android:background">@drawable/rectangle</item>

    </style>

    <!-- 定义一种通用的为控件添加外部的方形边框style -->
    <style  name="RelativeLayoutStyle">
        <item name="android:layout_width">72dp</item>
        <item name="android:layout_height">72dp</item>
        <item name="android:layout_margin">5dp</item>
        <item name="android:animateOnClick">true</item>
        <item name="android:background">@drawable/rectangle</item>

    </style>

    <style  name="TextViewRelativeLayoutStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_margin">5dp</item>
        <item name="android:animateOnClick">true</item>
        <item name="android:background">@drawable/rectangle</item>
    </style>

    <style name="GenericProgressBackground" parent="android:Theme">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">fill_parent</item>
        <item name="android:background">#DD111111</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="StartMeasureProgressBackground" parent="android:Theme">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">#DD111111</item>
        <item name="android:gravity">center</item>
    </style>

    <!-- parent="@android:style/Widget.Holo.Light.ProgressBar.Large" -->
    <style name="GenericProgressIndicator">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:indeterminate">true</item>
    </style>

    <style name="TextAppearence.App.TextInputLayout" parent="@android:style/TextAppearance">
        <item name="android:textColor">@color/counter_text_color</item>
    </style>

    <style name="Widget" />
    <style name="Widget.ScannerSubtitle">
        <item name="android:textColor">@color/headerBackgroundColor</item>
        <item name="android:textStyle">bold</item>
    </style>



</resources>
