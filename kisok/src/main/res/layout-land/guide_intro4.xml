<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:background="@drawable/gradientbackground"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_centerInParent="true"
        android:layout_margin="@dimen/margin_twenty"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/note_info"
            android:textAlignment="center"
            android:fontFamily="@font/caviardreams"
            android:layout_marginTop="@dimen/margin_twenty"
            android:textColor="@color/white"
            android:textSize="@dimen/text_sixteen"
            android:layout_gravity="center"
            />
        <ImageView
            android:layout_width="@dimen/margin_twohundread"
            android:layout_marginTop="@dimen/margin_ten"
            android:src="@drawable/gude4"
            android:layout_gravity="center"
            android:layout_height="@dimen/margin_twohundread" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/step4"
            android:fontFamily="@font/ssprolight"
            android:textStyle="bold"
            android:layout_marginTop="@dimen/margin_twenty"
            android:textColor="@color/fbutton_color_pomegranate"
            android:textSize="@dimen/text_eighteen"
            android:layout_gravity="center"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/step4_info"
            android:textAlignment="center"
            android:fontFamily="@font/ssprolight"
            android:textStyle="bold"
            android:layout_marginTop="@dimen/margin_twenty"
            android:textColor="@color/gray"
            android:textSize="@dimen/text_sixteen"
            android:layout_gravity="center"
            />

    </LinearLayout>

</RelativeLayout>