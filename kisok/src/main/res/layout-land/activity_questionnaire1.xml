<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".questionnaire1">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal">
        <Button
            android:id="@+id/btn_back1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="top"
            android:text="back"
            android:textColor="@color/white"
            android:background="@drawable/bg_btn_curved" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Questionnaire"
            android:textColor="@color/md_blue_500"
            android:layout_margin="10dp"
            android:textAlignment="center"
            android:textStyle="bold"
            android:layout_gravity="center_horizontal"
            android:textSize="48dp">
        </TextView>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="4"
        android:orientation="vertical">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:src="@drawable/questionnaireimages1">

            </ImageView>
            <TextView
                android:id="@+id/tv_vp_adp_question"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:padding="10dp"
                android:text="1. what are your immediate wellness goals."
                android:textSize="24sp"
                android:gravity="center"
                android:textColor="@color/colorPrimary">

            </TextView>
            <RadioGroup
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:id="@+id/radioGroup"
                android:padding="10dp"
                android:layout_weight="1"
                android:orientation="vertical"
                android:layout_gravity="center">

                <RadioButton
                    android:text="Reduce blood pressure levels"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/radio1"
                    android:textSize="24sp"
                    android:textColor="@color/primaryTextColor"
                    android:checked="true"
                    android:layout_marginTop="10dp"
                    android:layout_weight="1" />

                <RadioButton
                    android:text="Cut down sugar"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/radio2"
                    android:textSize="24sp"
                    android:textColor="@color/primaryTextColor"
                    android:layout_marginTop="10dp"
                    android:layout_weight="1" />
                <RadioButton
                    android:text="Reduce weight"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/radio3"
                    android:textSize="24sp"
                    android:textColor="@color/primaryTextColor"
                    android:layout_marginTop="10dp"
                    android:layout_weight="1" />

                <RadioButton
                    android:text="Build muscle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/radio4"
                    android:textSize="24sp"
                    android:textColor="@color/primaryTextColor"
                    android:layout_marginTop="10dp"
                    android:layout_weight="1" />
                <RadioButton
                    android:text="Improve body flexibility"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/radio5"
                    android:textSize="24sp"
                    android:textColor="@color/primaryTextColor"
                    android:layout_marginTop="10dp"
                    android:layout_weight="1" />

            </RadioGroup>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="end"
            android:layout_marginBottom="10dp">

            <ImageButton
                android:id="@+id/ib_vp_next_question"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/white"
                android:scaleType="fitEnd"
                android:layout_below="@+id/radioGroup"
                android:src="@drawable/bottomimg3">
            </ImageButton>
        </LinearLayout>






</LinearLayout>